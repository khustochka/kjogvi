<.header_single>
  Birding diary
</.header_single>

<div :for={two_lists <- @grouped_lists} class="md:flex md:gap-14">
  <div :for={{header, url, list} <- two_lists} class="md:flex-grow md:basis-1/2">
    <div :if={!list} class="mb-10">&nbsp;</div>
    <.top_n_list :if={list} list={list.lifelist} total={list.total} href={url} class="mb-10">
      <:header><%= header %></:header>
    </.top_n_list>
  </div>
</div>
