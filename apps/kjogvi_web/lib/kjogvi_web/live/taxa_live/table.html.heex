<div>
    <form class="mt-5 mb-4">
        <.input type="search" id="taxa-search"  name="search_term" label="Search taxa"
                value={@search_term} phx-change="term_updated" phx-target={@myself} 
                errors={[]} />
    </form>

    <.taxa_table book={@book} taxa={@taxa} />

    <.simple_pagination
    :if={!@search_enabled}
    page_num={@page_num}
    url_generator={fn n -> ~p"/taxonomy/#{@book.slug}/#{@book.version}/page/#{n}" end}
    />
</div>
